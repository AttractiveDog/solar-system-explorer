{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/admin/(.*)",
      "destination": "/src/server.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/src/server.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/src/server.js"
    },
    {
      "source": "/health",
      "destination": "/src/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/src/server.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
